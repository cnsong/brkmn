%fieldset
  %legend URL Details 
  = form_for(@url) do |f|
    = f.label :to, 'Full URL:'
    = f.text_field :to, :class => 'text'
    %p
    = f.label :shortened, 'Shortened URL:'
    = f.text_field :shortened, :class => 'text'
    %p
    = f.label :clicks, 'Clicks:'
    = @url.clicks
    %p
    %p
    = f.submit 'Save Changes', :class => 'save'
    %p
    %p
  -if @url.clicks > 0
    = link_to 'Reset Clicks', reset_path(@url.id.to_s), :confirm => "Are you sure you would like to reset 'Clicks' for this shortened URL (" + shortened_url(@url.shortened) + ") ?", :method => :post, :class => 'link'
    |
  = link_to 'Delete', '/urls/' + @url.id.to_s, :confirm => 'Are you sure you would like to delete this shortened URL (' + shortened_url(@url.shortened) + ') ?', :method => :delete, :class => 'link'
  |
  = link_to 'Back to URLS', urls_path, :class => 'link'