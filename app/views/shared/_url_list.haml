%table
  %tr
    %td{:colspan => 4, :class => "search"}
      = form_tag urls_path, :method => :get, :id => 'search_form' do
        = text_field_tag :search, params[:search]
        = submit_tag "Search", :name => nil
        = link_to "Clear", :controller => "urls", :action => "index", :search => ''
  %tr
    %td{:colspan => 4, :class => "top_pagination"}
      = will_paginate @urls
  %tr
    %th{:class => @shortened_header}= sortable 'shortened', 'Shortened URL'
    %th{:class => "arrow"}
    %th{:class => @full_header}= sortable '"to"', 'Full URL'
    %th{:class => @clicks_header}= sortable 'clicks', 'Clicks'
    = render :partial => 'urls/url_list', :collection => @urls

